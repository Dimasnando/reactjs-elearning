<%include ./navbarsiswa%>
<div class="container">
    <div class="row">
        <div class="col-10">
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Tanggal</th>
                    <th scope="col">Judul Absensi</th>
                    <th scope="col">Deskripsi Absensi</th>
                    <th scope="col">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(data of ListAbsensi){ %>
                  <tr>
                    <th scope="row"><%=data.tanggal%></th>
                    <td><%=data.judul%></td>
                    <td><%=data.deskripsi%></td>
                    <td>
                        <a href="/siswa/input/absensi/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=siswa.id%>/<%=data.id%>" class="btn btn-success mt-1">Absensi</a>
                    </td>
                  </tr>
                  <% } %>

                </tbody>
            </table>
        </div>
        <div class="col-2">
            
            <a href="/siswa/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=siswa.id%>" class="btn mt-2 col-lg-12 " style="color:#ccc ; background-color: #18225D;"><i class="fas fa-chevron-left"></i> Kembali</a>
        </div>
    </div>
</div>