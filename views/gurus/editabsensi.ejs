<%include ./navbarguru%>

<div class="container">
    <div class="card m-2">
        <h5 class="card-header"></h5>
        <div class="card-body">
          <h5 class="card-title">Buat Absensi Kehadiran <%=mapel%>, <%=kelas%> <%=jurusan%> <%=lokal%></h5>
          <%include ../massages%>
          <form action="/guru/edit/absensi/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=guru.id%>/<%=absensi.id%>" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Tanggal Pertemuan</label>
                <input type="date" 
                class="form-control"
                id="tanggal"
                name="tanggal"
                value="<%=absensi.tanggal%>">
            </div>

            <div class="form-group">
              <label for="exampleInputEmail1">Judul Absensi</label>
              <input type="text" 
              class="form-control"
              id="judul"
              name="judul"
              value="<%=absensi.judul%>">
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Deskripsi</label>
                <textarea class="form-control" 
                id="deskripsi" 
                name="deskripsi"
                rows="3"><%=absensi.deskripsi%></textarea>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">Kode Absensi</label>
                <input type="text" 
                class="form-control"
                id="kode"
                name="kode"
                value="<%=absensi.kode%>">
              </div>
              <center>
            <button type="submit" class="btn " style="color:#ccc ; background-color: #18225D; width: 45%;">Kirim Absensi</button>
            <a href="/guru/absensi/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=guru.id%>" class="btn " style="color:#ccc ; background-color: #18225D; width: 45%;">Kembali</a>
            </center>
          </form>

        </div>
      </div>
</div>