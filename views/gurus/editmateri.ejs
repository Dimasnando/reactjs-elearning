<%include ./navbarguru%>

<div class="container">
    <div class="card m-2">
        <h5 class="card-header"></h5>
        <div class="card-body">
          <h5 class="card-title">Edit materi <%=mapel%>, <%=kelas%> <%=lokal%></h5>
          <%include ../massages%>
          <form action="/guru/edit/tugas/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=guru.id%>/<%=materi.id%>" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Tanggal Pertemuan</label>
                <input type="date" 
                class="form-control"
                id="tanggal"
                name="tanggal"
                value="<%=materi.tanggal%>">
            </div>

            <div class="form-group">
              <label for="exampleInputEmail1">Nama Materi</label>
              <input type="text" 
              class="form-control"
              id="namatugas"
              name="namatugas"
              value="<%=materi.namatugas%>">
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Keterangan Materi</label>
                <textarea class="form-control" 
                id="keterangan" 
                name="keterangan"
                rows="3"><%=materi.keterangan%></textarea>
            </div>

            <div class="form-group">
                <label for="exampleFormControlTextarea1">Upload File Materi</label>
                <input type="file" 
                class="form-control-file border" 
                id="file"
                name="file" required>
            </div>

            <center>
            <button type="submit" class="btn " style="width: 45%; color:#ccc ; background-color: #18225D;">Kirim Ulang Materi</button>
            <a href="/guru/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=guru.id%>" class="btn " style="width: 45%; color:#ccc ; background-color: #18225D;">Kembali</a>
            </center>

          </form>

        </div>
      </div>
</div>