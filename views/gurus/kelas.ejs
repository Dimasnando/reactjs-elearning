<div class="container">
  Mengajar Di Kelas <%=kelas%> Jurusan <%=jurusan%> Lokal <%=lokal%> Mapel <%=mapel%>
    <% for (data of ListMateris){ %>
    <div class="card m-2">
        <h5 class="card-header"><%=data.tanggal%></h5>
        <div class="card-body">
          <h5 class="card-title"><%=data.namatugas%></h5>
          <p class="card-text"><%=data.keterangan%></p>

          <div class="gambar <%=data.gambar%> m-2">
              <center>
                <img src="/strong/<%=data.filename%>" width="200px" alt="">
              </center>
            
          </div>

          <div class="video <%=data.video%>">
              <center>
                <video width="320" height="240" controls>
                    <source src="/strong/<%=data.filename%>" type="video/mp4">
                </video>
              </center>

          </div>

          <div class="document <%=data.document%>">
              <center>
                <i class="fas fa-file" style="font-size: 80px;"></i>
                <h6></h6>
              </center>

          </div>
          <!-- Status Posting : <%=data.tampilkan%> <br> -->
          <a href="/strong/<%=data.filename%>" class="btn <%=data.size%>" style="color:#ccc ; background-color: #18225D;" download="<%=data.originalname%>"><i class="fas fa-download"></i> Unduh File</a>
          <!-- <a href="/guru/posting/materi/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=guru.id%>/<%=data.id%>" class="btn " style="color:#ccc ; background-color: #18225D;"><i class="fas fa-mouse"></i> Posting Materi</a> -->
          <a href="/guru/edit/tugas/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=guru.id%>/<%=data.id%>" class="btn " style="color:#ccc ; background-color: #18225D;"><i class="fas fa-edit"></i> Edit Materi</a>
          <a href="/guru/hapus/tugas/<%=kelas%>/<%=jurusan%>/<%=lokal%>/<%=mapel%>/<%=guru.id%>/<%=data.id%>" class="btn " style="color:#ccc ; background-color: #18225D;"><i class="fas fa-trash-alt"></i> Hapus</a>
        </div>
    </div>
    <% } %>

</div>