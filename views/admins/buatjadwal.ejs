<%include ./navbaradmin%>

<div class="container">
    <center>
        <div class="col-lg-8 col-md-8 p-3 border">
            <h3 class="mb-30" style="color:#18225D ;">Jadwal Mengajar Guru</h3>
            <%include ../massages%>
            <form action="/admin/buatjadwal/guru" method="post">
                <div class="mt-10">
                    <div class="form-select">
                    <select 
                    id="hari" 
                    name="hari">
                        <option value="">Hari Pertemuan</option>
                        <option value="Senin">Senin</option>
                        <option value="Selasa">Selasa</option>
                        <option value="Rabu">Rabu</option>
                        <option value="Kamis">Kamis</option>
                        <option value="Jum'at">Jum'at</option>
                        <option value="Sabtu">Sabtu</option>
                    </select>
                    </div>
                </div>

                <div class="mt-10">
                    <input type="time" 
                    name="jam"
                    id="jam"
                    class="single-input">
                </div>

                <div class="mt-10">
                    <div class="form-select">
                    <select 
                    id="guru" 
                    name="guru">
                        <option value="">Nama Guru</option>
                        <% for(data of ListGurus){ %>
                        <option value="<%=data.nama%> <%=data.gelar%>"><%=data.nama%> <%=data.gelar%></option>
                        <% } %>
                    </select>
                    </div>
                </div>

                <div class="mt-10">
                        <div class="form-select">
                        <select 
                        id="kelas" 
                        name="kelas">
                            <option value="">Kelas</option>
                             <option value="XII">XII</option>
                            <option value="XI">XI</option>
                            <option value="X">X</option>
                        </select>
                        </div>
                </div>

                <div class="mt-10">
                    <div class="form-select">
                    <select 
                    id="jurusan" 
                    name="jurusan">
                        <option value="">Jurusan</option>
                        <option value="IPA">Ilmu Pengetahuan Alam (IPA)</option>
                        <option value="IPS">Ilmu Pengetahuan Sosial (IPS)</option>
                    </select>
                    </div>
                </div> 
                
                <div class="mt-10">
                    <input type="text" 
                    name="lokal"
                    id="lokal"
                    placeholder="Kode Lokal Misal IPA 1, IPA 2, IPA 3, IPS 1, IPS 2, IPS 3"
                    class="single-input">
                </div> 
                
                <div class="mt-10">
                    <input type="text" 
                    name="mapel"
                    id="mapel"
                    placeholder="Mata Pelajaran"
                    class="single-input">
                </div>

                <div class="mt-10">
                    <button type="submit" class="btn " style="color:#ccc ; background-color: #18225D; width: 45%;">Simpan Jadwal</button>
                    <a href="/admin/dashboard" class="btn " style="color:#ccc ; background-color: #18225D; width: 45%;">Kembali</a>
                </div>
                
            </form>
        </div>
    </center>
</div>