<%include ./navbaradmin%>

<div class="container" style=" overflow: scroll;">

  <div id="layoutSidenav_content">
    <main>
            <div class="card mb-4" style="color: #18225D;">
                <div class="card-header">
                    <i class="fas fa-table mr-1"></i>
                    Semua Akun Siswa <a href="/admin/ajaran/baru/naik/kelas" class="btn " style="color:#ccc ; background-color: #18225D;">Semua siswa naik kelas</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                  <th scope="col">#</th>
                                  <th scope="col">Nama Siswa</th>
                                  <th scope="col">NIS</th>
                                  <th scope="col">Kelas / Lokal</th>
                                  <th scope="col">Alamat Email</th>
                                  <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                  <th scope="col">#</th>
                                  <th scope="col">Nama Siswa</th>
                                  <th scope="col">NIS</th>
                                  <th scope="col">Kelas / Lokal</th>
                                  <th scope="col">Alamat Email</th>
                                  <th scope="col">Action</th>
                                </tr>
                            </tfoot>
                            <tbody>
                              <% for (data of ListSiswas){ %>
                                <tr>
                                  <th scope="row"> <%=data.no%> </th>
                                  <td><%=data.ndepan%> <%=data.nbelakang%></td>
                                  <td><%=data.nis%></td>
                                  <td><%=data.angkatan%> / <%=data.lokal%></td>
                                  <td><%=data.email%></td>
                                  <td>
                                    <a href="/admin/editsiswa/<%=data.id%>" class="btn " style="color:#ccc ; background-color: #18225D;"><i class="fas fa-edit"></i></a>
                                    <a href="/admin/hapussiswa/<%=data.id%>" class="btn " style="color:#ccc ; background-color: #18225D;"><i class="fas fa-trash-alt"></i></a>
                                  </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        
    </main>
  </div>

</div>
